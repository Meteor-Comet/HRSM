<Window x:Class="HRSM.HRSMApp.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="系统登录" Height="350" Width="500"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None" ResizeMode="NoResize"
        Background="Transparent" AllowsTransparency="True">

    <Border CornerRadius="10" Background="#005A9E" Padding="20">
        <Border.Effect>
            <DropShadowEffect BlurRadius="15" ShadowDepth="0" Opacity="0.5"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Button Content="✕" HorizontalAlignment="Right" 
                    Foreground="White" Background="Transparent" BorderThickness="0"
                    FontSize="16" FontWeight="Bold" Cursor="Hand"
                    Click="BtnClose_Click"/>

            <StackPanel Grid.Row="1" VerticalAlignment="Center" Margin="40,0">

                <TextBlock Text="房屋租售管理平台" 
                           FontSize="28" FontWeight="Bold" Foreground="White" 
                           HorizontalAlignment="Center" Margin="0,0,0,30"/>

                <Grid Margin="0,10">
                    <TextBlock Text="用户名：" Foreground="White" VerticalAlignment="Center" FontSize="16" Margin="0,0,260,0"/>
                    <TextBox Text="{Binding UserName, UpdateSourceTrigger=PropertyChanged}" Height="35" FontSize="16" Padding="5" VerticalContentAlignment="Center" Width="250" HorizontalAlignment="Right"/>
                </Grid>

                <Grid Margin="0,10">
                    <TextBlock Text="密   码：" Foreground="White" VerticalAlignment="Center" FontSize="16" Margin="0,0,260,0"/>
                    <PasswordBox x:Name="txtPwd" Height="35" FontSize="16" Padding="5" VerticalContentAlignment="Center" Width="250" HorizontalAlignment="Right"/>
                </Grid>

                <Button Command="{Binding LoginCommand}" CommandParameter="{Binding ElementName=txtPwd}" Height="40" Width="250" HorizontalAlignment="Right" Margin="0,20,0,0" FontSize="18" FontWeight="Bold" BorderThickness="0" Cursor="Hand" IsDefault="True">

                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#FFD66A"/>
                            <Setter Property="Foreground" Value="#333"/>
                            <Setter Property="Content" Value="登  录"/>

                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsBusy}" Value="True">
                                    <Setter Property="IsEnabled" Value="False"/>
                                    <Setter Property="Background" Value="#CCCCCC"/>
                                    <Setter Property="Content" Value="登录中..."/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</Window>